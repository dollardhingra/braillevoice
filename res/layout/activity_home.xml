<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/actionBarHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:text="hh"
    tools:context=".HomeActivity" >
<ScrollView
       android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout android:orientation="vertical"
       android:layout_width="match_parent"
    android:layout_height="match_parent"  >
    <TextView
        android:id="@+id/textViewMainMenu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Main Menu"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:id="@+id/LinearLayoutHomeButtonFirstRow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="90" >

        <TextView
            android:id="@+id/textViewTime"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="30"
            android:gravity="center"
            android:text="00:00" />

        <Button
            android:id="@+id/buttonLocation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:text="Location" />

        <TextView
            android:id="@+id/textViewBatteryInfo"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="30"
            android:gravity="center"
            android:text="  %" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/LinearLayout4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100" >

            <Button
            android:id="@+id/buttonNews"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="News" />

        <Button
            android:id="@+id/buttonHelplineNumbers"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="Helpline Numbers" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100" >


        <Button
            android:id="@+id/buttonHelpMenu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="Help" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100" >

        <Button
            android:id="@+id/buttonWifi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="wifi" />

        <Button
            android:id="@+id/buttonCheckNet"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="Check Net" />
    </LinearLayout>

    
    
    <Button
        android:id="@+id/buttonData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data" />

    <Button
        android:id="@+id/buttonSoundToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sound mode" />

    </LinearLayout>
</ScrollView>
</LinearLayout>